<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniCalendar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimaryVariant">@color/exam</item>
        <item name="colorOnPrimary">@color/fontcolor</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/other</item>
        <item name="colorSecondaryVariant">@color/holiday</item>
        <item name="colorOnSecondary">@color/fontcolor</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/backgroundcolor</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/fontcolor</item>
        <!-- Text color -->
        <item name="android:textColor">@color/fontcolor</item>


    </style>
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/fontcolor</item> <!-- Black text color in light mode -->
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/fontcolor</item> <!-- Black header text color in light mode -->
    </style>
    <style name="Theme.UniCalendar.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item> <!-- Optional if you want fullscreen -->
    </style>
    <style name="roundFab">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>